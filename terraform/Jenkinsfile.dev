pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AKIAQY545ZB44DLHNPHL')
        AWS_SECRET_ACCESS_KEY = credentials('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')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                script {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                script {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            when {
                expression { currentBuild.resultIsBetterOrEqualTo('UNSTABLE') }
            }
            steps {
                script {
                    withCredentials([aws(credentialsId: 'AWS_ACCESS_KEY_ID', region: 'us-east-1')]) {
                        input message: 'Do you want to apply the Terraform plan?', ok: 'Apply'
                        sh 'terraform apply -input=false tfplan'
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                sh 'terraform destroy -auto-approve' // Optional: Destroy resources after the job completes
            }
        }
    }
}
